<odoo>

    <template id="portal_membership_detail" name="تفاصيل العضوية">
        <t t-call="portal.portal_layout">

            <t t-set="breadcrumbs"
               t-value="[('عضوياتي','/my/memberships'),
                         (membership.sequence or '', '')]"/>

            <div class="container mt-4" style="direction:rtl;text-align:right;">

                <h3 class="mb-3">
                    العضوية رقم
                    <strong t-esc="membership.sequence"/>
                </h3>

                <div class="card shadow-sm">
                    <div class="card-body">

                        <p>
                            <strong>الاسم:</strong>
                            <t t-esc="membership.name"/>
                        </p>

                        <p>
                            <strong>نوع العضوية:</strong>
                            <t t-if="membership.membership_type == 'monthly'">شهرية</t>
                            <t t-elif="membership.membership_type == 'semiannual'">6 أشهر</t>
                            <t t-elif="membership.membership_type == 'annual'">سنوية</t>
                        </p>

                        <p>
                            <strong>الحالة:</strong>
                            <span class="badge"
                                  t-att-class="
                                    'bg-secondary' if membership.state == 'draft' else
                                    'bg-primary' if membership.state == 'approved' else
                                    'bg-warning' if membership.state == 'invoiced' else
                                    'bg-success' if membership.state in ('paid','active') else
                                    'bg-danger'
                                  ">
                                <t t-if="membership.state == 'draft'">جديد</t>
                                <t t-elif="membership.state == 'approved'">موافق عليه</t>
                                <t t-elif="membership.state == 'invoiced'">بانتظار الدفع</t>
                                <t t-elif="membership.state == 'paid'">مدفوع</t>
                                <t t-elif="membership.state == 'active'">نشطة</t>
                                <t t-elif="membership.state == 'expired'">منتهية</t>
                                <t t-else="">مرفوضة</t>
                            </span>
                        </p>

                        <t t-if="membership.start_date">
                            <p>
                                <strong>تاريخ البداية:</strong>
                                <t t-esc="membership.start_date"/>
                            </p>
                        </t>

                        <t t-if="membership.end_date">
                            <p>
                                <strong>تاريخ الانتهاء:</strong>
                                <t t-esc="membership.end_date"/>
                            </p>
                        </t>

                        <!-- ACTIONS -->
                        <div class="mt-4 d-flex gap-2 flex-wrap">

                            <!-- إنشاء فاتورة -->
                            <t t-if="membership.state == 'approved'">
                                <form t-att-action="'/my/memberships/%s/create_invoice' % membership.id"
                                      method="post">
                                    <input type="hidden" name="csrf_token"
                                           t-att-value="request.csrf_token()"/>
                                    <button class="btn btn-primary">
                                        إنشاء فاتورة
                                    </button>
                                </form>
                            </t>

                            <!-- التحقق من الدفع -->
                            <t t-if="membership.state in ('invoiced','paid')">
                                <form t-att-action="'/my/memberships/%s/check_payment' % membership.id"
                                      method="post">
                                    <input type="hidden" name="csrf_token"
                                           t-att-value="request.csrf_token()"/>
                                    <button class="btn btn-success">
                                        التحقق من الدفع وتفعيل العضوية
                                    </button>
                                </form>
                            </t>

                            <!-- تحميل البطاقة -->
                            <t t-if="membership.state == 'active'">
                                <a t-att-href="'/my/memberships/%s/card' % membership.id"
                                   class="btn btn-outline-danger"
                                   target="_blank">
                                    تحميل بطاقة العضوية (PDF)
                                </a>
                            </t>

                        </div>

                    </div>
                </div>

            </div>

        </t>
    </template>

</odoo>
