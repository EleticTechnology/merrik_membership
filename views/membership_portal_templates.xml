<odoo>
    <template id="portal_my_memberships" name="عضوياتي">
        <t t-call="portal.portal_layout">

            <t t-set="breadcrumbs"
               t-value="[('عضوياتي', '/my/memberships')]"/>

            <div class="container mt-4" style="direction:rtl;text-align:right;">

                <h3 class="mb-3">عضوياتي</h3>

                <t t-if="not memberships">
                    <div class="alert alert-info">
                        لا توجد عضويات حالياً
                    </div>
                </t>

                <t t-if="memberships">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>رقم العضوية</th>
                                <th>النوع</th>
                                <th>الحالة</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="memberships" t-as="m">
                                <tr>
                                    <td><t t-esc="m.sequence"/></td>
                                    <td><t t-esc="m.membership_type"/></td>
                                    <td><t t-esc="m.state"/></td>
                                    <td>
                                        <a t-att-href="'/my/memberships/%s' % m.id"
                                           class="btn btn-sm btn-primary">
                                            عرض
                                        </a>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>

            </div>

        </t>
    </template>
</odoo>
